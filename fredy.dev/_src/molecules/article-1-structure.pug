    /* from: a link inside a link trick: https://stackoverflow.com/a/46707009 */
    .a-block {
      position:relative;
    }
    .a-block .a-overlay {
      position:absolute;
      opacity: 0;
      left:0;
      top:0;
      bottom:0;
      right:0;
    }
    .a-block .a-inner {
      /* position:relative; */
        pointer-events: none;
        /*z-index: 1;*/
    }
    .a-block .a-inner a {
      pointer-events: all;
      position:relative;
