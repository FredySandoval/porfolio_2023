.article_style-1
    a.left-1(href='/pages/article.html')
        img.hidden-1( src="/image1.webp" aria-labelledby="article-1-link-1" )
        img.show-1( src="/image2.webp" aria-labelledby="article-1-link-2" )
        img.hidden-1( src="/image3.webp" aria-labelledby="article-1-link-3" )
    .right-1
        mixin article-1(id)
            article.a-block#art-1( onmouseenter="handle_img_switch_1(this)")
                a.a-overlay(href="/pages/article.html" aria-labelledby=`article-1-link-${id}` aria-describedby=`article-1-link-${id}` aria-label="Article link")
                .article-right-1
                    .right-title-1
                        h3.h3-article-1.a-inner
                            a(href="/pages/article.html" id=`article-1-link-${id}`)
                                span Title Lorem ipsum dolor, sit amet consectetur adipisicing elit.
                    .right-tags-1.a-inner
                        a.tags-1(href='#') #Javascript 
                        a.tags-1(href='#') #Coding 
                        a.tags-1(href='#') #Programming 
        +article-1('1')
        +article-1('2')
        +article-1('3')
script.
    function handle_img_switch_1(el){
        const img = document.querySelectorAll('a.left-1 > img');
        let arr = Array.from(img);

        arr.forEach(function(item, index){
            if(item.classList.contains('show-1')){
                item.classList.remove('show-1');
                item.classList.add('hidden-1');
            }
        });
        const aria = el.firstElementChild.getAttribute('aria-labelledby')
        const show = document.querySelector(`a.left-1 > img[aria-labelledby="${aria}"]`);
        show.classList.remove('hidden-1');
        show.classList.add('show-1');
    }