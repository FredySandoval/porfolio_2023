style.
    footer {
        background-color: var(--footer-background-color);
        transition: background-color 0.4s ease-out, color 0.4s ease-out;
        display: flex;
        justify-content: center; 
        color: var(--header-text-color);

    }
    .footer_style-1 {
        max-width: var(--page-width);
        width: 100%;
        display: flex;
        flex-direction: row;
        font-family: 'Roboto', sans-serif;
        font-weight: 400;
    }
    .footer_style-1 > .left-footer-1 {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        padding-top: 80px;
        padding-bottom: 80px;
    }
    .left-footer-1 a, .left-footer-1 h3, .left-footer-1 span {
        color: var(--header-text-color);
        padding-bottom: 5px;
        margin-left: 30px;
        margin-right: 30px;
        width: fit-content;
    }
    .left-footer-1 > hr {
        width: 100%;
        border: 1px solid var(--header-text-color);
    }
    .left-footer-1 > a:hover {
        color: var(--hover-text-color);
    }
    .right-footer-1 {
        width: 28%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .animation-wrapper {
        height: 10px;
        width: 10px;
    }
    @media (max-width: 1000px) {
        .right-footer-1 {
            display: none;
        }
    }
