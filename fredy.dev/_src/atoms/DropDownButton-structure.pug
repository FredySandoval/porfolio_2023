style.
    .dropbtn {
      border: none;
      cursor: pointer;
    }
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .dropdown-content {
      background-color: var(--header-background-color);
      border: 1px solid var(--header-underline-color);
      display: block;
      visibility: hidden;
      opacity: 0;
      transition: opacity .2s ease-in-out;
      position: absolute;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.4);
      z-index: 1;
      border-radius: var(--header-border-radius);
      overflow: hidden;
    }
    .dropdown-content a {
      padding: 12px 16px;
      text-decoration: none;
      display: block;
    }
    .dropdown-content a:hover {
      background-color: var(--header-hover-background-color);
      color: var(--hover-text-color);
    }
    .dropdown:hover .dropdown-content {
      display: block;
      opacity: 1;
      visibility: visible;
    }
    .dropdown > ul li {
      padding: 0;
      margin: 0;
    }
    .dropdown > ul > li > a {
      color: var(--header-text-color);
    }
.dropdown.hoverEffect
    .dropbtn(role="button" aria-expanded="false" onmouseenter="ariaExpanded_dropbtn(this)" ) Categories
    ul.dropdown-content(aria-hidden="true" aria-label="submenu" tabindex="-1" onmouseleave="ariaCollapse_dropbtn(this)")
        li 
          a.hoverEffect-dpbtn(href='#' aria-label="category 1") Link 1
        li 
          a.hoverEffect-dpbtn(href='#' aria-label="category 2") Link 2
        li
          a.hoverEffect-dpbtn(href='#' aria-label="category 3") Link 3
script.
    function ariaExpanded_dropbtn(el) {
      const dropdown = document.querySelector('.dropbtn');
      dropdown.setAttribute('aria-expanded', 'true');
      const menu1 = document.querySelector('.dropdown-content');
      menu1 .setAttribute('aria-hidden', 'false');
    }
    function ariaCollapse_dropbtn(el) {
      const dropdown = document.querySelector('.dropbtn');
      dropdown.setAttribute('aria-expanded', 'false');
      const menu1 = document.querySelector('.dropdown-content');
      menu1 .setAttribute('aria-hidden', 'true');
    }